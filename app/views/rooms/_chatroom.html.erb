<div class = "message_box px-4" data-room= "<%= @room.id %>" data-user="<%= current_user.id %>">
  <div class='px-2 py-1 text-xl'>
    <%= @room.with(current_user).name %>
  </div>
  <div class="container">
        <div class="message_area">
          <%= render @messages %>
        </div>
        <div class="input">
          <%= form_for @message ,remote: true, html:{class:'h-full flex'} ,url: room_messages_path(@room) do |form|%>
            <%= form.text_field :content ,class:' ctext',placeholder: '打字' %>
            <%= form.submit '發送', class:'csubmit' %>
          <% end %>
        </div>
  </div>
</div>