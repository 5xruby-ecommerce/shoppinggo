<table>
  <thead>
    <tr>
      <td>商品名稱</td>
      <td></td>
      <td>數量</td>
      <td>單價</td>
      <td>小計</td>
      <td>處理</td>
    </tr>
  </thead>
  <tbody>
    <% cart.items.each do |item| %>
      <tr class="content" data-controller="updatecart" data-updatecart-id="<%= item.product.id %>" data-updatecart-number-value=<%= item.quantity %> data-updatecart-totaprice-value= 0 >
          <td><img src="https://picsum.photos/100/100/?random=1"></td>
          <td><%= item.product.name %></td>
            <td>
              <div class="amount">
                <button class="minus" data-action="click->updatecart#minusbtn">-</button>
                <input type="text" class="input_amount" data-updatecart-target="amount" data-action="input->updatecart#changequantity">
                <button class="plus" data-action="click->updatecart#plusbtn">+</button>
              </div>
            </td>
            <td data-updatecart-target="price"><%= item.product.price %></td>
            <td data-updatecart-target="totalprice" class="item_total_price"></td>
            <td>
              <!-- <%= link_to '取消', carts_path(item: item.product.id), method: 'delete', data: { confirm: '確認刪除'}%> -->
              <!-- <%= link_to '取消', data: {action: "updatecart#destroy"} %> -->
              <p href='#' data-action="click->updatecart#destroy">取消</p>
            </td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3">總價</td>
      <td class="cart_total"><%= cart.total_price %></td>
    </tr>
  </tfoot>
</table>
