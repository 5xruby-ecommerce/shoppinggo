<h1>首頁</h1>

<div class="wrap">
  <div class="rows">
    <% @products.each do |product|%>
      <%= link_to new_shop_product_path(product) do %>
        <div class="item">
          <div class="img"><img src="https://picsum.photos/100/100/?random=1"></div>
          <div class="content">
            <div class="title"><%= product.name %></div>
            <div class="price">$<%= product.price %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
