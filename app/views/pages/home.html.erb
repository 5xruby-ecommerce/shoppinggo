<div class="home">
<!-- swiper -->
<div class="px-10 flex pt-10">
  <div class="w-3/5">
    <div class="swiper-container">
      <div class="swiper-wrapper">
        <div class="swiper-slide">Slide 1</div>
        <div class="swiper-slide">Slide 2</div>
        <div class="swiper-slide">Slide 3</div>
      </div>
      <!-- Add Arrows -->
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>
    </div>
  </div>
  <div class="w-2/5 flex-col flex">
    <div class="flex-1 mb-0.5 bg-gray-100"></div>
    <div class="flex-1 mt-0.5 bg-gray-100"></div>
  </div>
</div>
<!-- 分類 -->
<section class="classification">
  <div class="bg-white w-full h-full shadow">
    <div class="p-4 text-lg text-gray-400">分類</div>
    <div class="grid grid-cols-10 gap-0.5 bg-gray-50 pt-0.5">
      <div class="bg-white">
      <%= form_tag products_path, method: :get do %> 
        <%= submit_tag "hello", name: :search %>
      <% end %>
      </div>
      <div>
        <!-- <div class="h-16 w-16 rounded-full bg-gray-100"></div> -->
        <%= form_tag products_path, method: :get do %> 

          <%= submit_tag "hello", name: :search ,class:'h-36 w-full bg-white' %>
         
        
        <% end %>
      </div>
      <div class="bg-white flex items-center justify-center bg-white">
        <%= form_tag products_path, method: :get do %> 
          <%= submit_tag "hello", name: :search do %>
            <div class="h-36">hello</div>
          <% end %>
        <% end %>
      </div>
      <div class="bg-white">0</div>
      <div class="bg-white">0</div>
      <div class="bg-white">日常用品</div>
      <div class="bg-white">書籍</div>
      <div class="bg-white">服裝</div>
      <div class="bg-white">遊戲</div>
      <div class="bg-white flex flex-col items-center justify-center">
        <span>18禁商品</span>
        <div class="h-16 w-16 rounded-full bg-gray-200 relative">
          <%= image_tag 'age-limit.png' ,class:'absolute mt-2 text-red-900'%>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- 商品卡片 -->
  <section class="card">
    <div class="content max-auto">
      <% @products.each do |product|%>
        <div class="w-6/12 md:w-4/12 lg:w-2/12 p-0.5">
          <div class="cardstyle">
            <%= link_to product_path(product) do %>
            <div class='w-full'>
              <% if product.image_url.present? %>
                <div class="picture"><%= image_tag product.image_url %></div>
                <% else %>
                <div class="picture dark"><%= image_tag 'bag.png' %></div>
              <% end %>
            </div>
            <div class='item'>
              <%= product.name %>
              <div>
                <div>$<%= product.price %></div>
                <div>已售出<span>10</span></div>
              </div>
            </div>
          </div>
        <% end %> 
        </div>
      <% end %>
    </div>
  </section>
</div>

