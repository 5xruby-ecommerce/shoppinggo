<div class="wrap">
  <div class="img">
    <img src="https://picsum.photos/100/100/?random=1">
  </div>
  <div class="content">
    <div class="title"><%= @product.name %></div>
    <div class="price">$<%= @product.price %></div>
    <div class="amount">
      <div>數量</div>
      <button class="minus">-</button>
      <input type="text" class="inputamount" value="1">
      <button class="plus">+</button>
    </div>
    <div class="cartbtn">
      <%= link_to "加到購物車", add_item_carts_path(@product), method: 'post'%>
    </div>
  </div>
</div>