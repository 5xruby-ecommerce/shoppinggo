<%= form_for(product) do |f| %>
    <%= f.label :image, "商品圖片" %>
    <%= f.file_field :image, id: :product_image, class: "form-control" %>
    <br/>
    <%= f.label :name, "商品名稱" %>
    <%= f.text_field :name %><br/>
    <%= f.label :content, "商品描述" %>
    <%= f.text_area :content %><br/>
    <%= f.label :quantity, "商品數量" %>
    <%= f.text_field :quantity %><br/>
    <%= f.label :price, "商品價格" %>
    <%= f.text_field :price %><br/>
    <%= f.submit "更新商品" %>
  <% end %>