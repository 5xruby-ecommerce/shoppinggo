<div class='flex flex-grow items-center flex-col space-y-4 pb-10 pt-36'>
  <div class='h-5/6 bg-gray-50 w-10/12 rounded-sm overflow-auto border-1 shadow'>

    <table class="w-full text-center border-collapse">
      <thead class="bg-gray-100 text-gray-500">
        <tr>
          <th>購買商品</th>
          <th></th>
          <th>購買數量</th>
          <th>單價</th>
          <th>收件者</th>
          <th>聯絡電話</th>
          <th>寄送地址</th>
          <th></th>
        <tr>
      </thead>

      <tbody>
        <% @products.each do |product| %>
        <tr class='border-b-2 border-fuchsia-600 h-20'>
          <td class='w-1/12'><%= image_tag product.image.to_s %></td>
          <td class='w-2/12'><%= product.name %></td>
          <td class='w-2/12'><%= product.quantity %></td>
          <td class='w-1/12'><%= product.price %></td>
          <td class='w-1/12'><%= @order.receiver %></td>
          <td class='w-1/12'><%= @order.tel %></td>
          <td class='w-3/12'><%= @order.address %></td>
          <td class='w-1/12'><%= link_to '回上頁', order_list_index_path, class:'primary-button text-xs' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>