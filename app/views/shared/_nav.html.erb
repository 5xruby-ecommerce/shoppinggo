<nav class='primarynav'>
  <div>
    <%= link_to root_path do %>
      <%= image_tag "logoblack.png" , class:'w-20 lg:w-32' %>
    <% end %>
  </div>

  <div class='searchbar w-1/5 sm:3/5'>
    <%= form_tag products_path, method: :get do %>
      <div class="search">
        <span class="btn">
          <%= button_tag(type: "submit", class:"icon") do %>
            <i class="fas fa-search"></i>
          <% end %>
        </span>
        <%= text_field_tag :search, params[:search], placeholder: "搜尋商品", class:'inputsearch' %>
      </div>
    <% end %>
  </div>


  <div>
    <div class='login'>
      <!-- <div><%= link_to '首頁', root_path %></div> -->
        <% if user_signed_in? %>
          <%= link_to '登出' ,  destroy_user_session_path , method: 'delete' %>
          <%= link_to carts_path do %>
            <i class="fas fa-cart-plus"></i></i>(<%= current_cart.items.count %>) / <%= current_cart.total_price %>
          <% end %>
        <% if current_user.shop.blank? %>
          <%= link_to '我要開店', new_shop_path %>
        <% else %>
          <%= link_to '賣家中心', shops_path %>
        <% end %>
      <% else %>
        <%= link_to '註冊', new_user_registration_path %>
        <%= link_to '登入',  new_user_session_path  %>
      <% end %>
    </div>
  </div>
</nav>
    

