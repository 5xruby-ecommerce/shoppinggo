<section class="flex justify-center pt-44 h-screen">
  <div class="w-full max-w-sm mx-auto">
  <div class='mb-8'><%= image_tag "simplelogo.png" %></div>
  <div class='text-red-500 login_notice'></div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-devise rounded-t-lg">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail", class:'w-full outline-none email' %>
    </div>
    <div class="input-devise rounded-b-lg">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class:'w-full outline-none password'%>
    </div>
    <!-- devise forgot password -->
    <div class="text-xs text-gray-400 mt-2">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>

    <button class="bg-gray-800 btn login">
      <h2 class="text-center font-extrabold"><%= f.submit "登入" ,class:'bg-transparent'%></h2>
    </button>
    
  <% end %>
  <%= render 'devise/shared/social' %>
</section>


