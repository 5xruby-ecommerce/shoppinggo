<section class="flex justify-center items-center h-screen">
  <div class="w-full max-w-sm mx-auto">
  <div>logo</div>
  <h2 class="text-center pb-4">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field border-teal p-2 border-t-12 bg-white border boder-grey-300 rounded-t-lg ">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
    </div>

    <div class="field border-teal p-2 border-t-12 bg-white border boder-grey-300 rounded-b-lg ">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
    </div>

    
    <% if devise_mapping.rememberable? %>
      <label class="text-gray-400">
        <%= f.check_box :remember_me %> 
        <span class="text-sm"><%= f.label :remember_me %></span> 
      </label>
    <% end %>

    <button class=" mt-8 w-full	border-t-12 border-teal rounded-lg py-2 bg-gray-800 font-semibold text-white actions">
      <%= f.submit "登入" %>
    </button>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</section>


