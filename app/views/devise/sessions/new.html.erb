<section class="flex justify-center items-center h-screen">
  <div class="w-full max-w-sm mx-auto">
  <div class="-mt-40"><%= image_tag "logo.png" %></div>
  <h2 class="text-center font-extrabold  pb-2">Hello, welcome back</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-devise rounded-t-lg">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "e-mail" %>
    </div>

    <div class="input-devise rounded-b-lg ">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "password" %>
    </div>

    <!-- devise forgot password -->
    <div class="text-xs text-gray-400 mt-2">
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
      <% end %>
    </div>

    <button class="bg-gray-800 btn-login">
      <h2 class="text-center font-extrabold"><%= f.submit "登入" %></h2>
    </button>
    
  <% end %>
  <%= render "devise/shared/links" %>

  </div>
</section>

