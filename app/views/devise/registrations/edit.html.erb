<h2>個人資料</h2>
<%= link_to '修改密碼', change_password_path %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <%= image_tag resource.image.url if resource.image.url.present? %>
  
  <div class="field">
    <%= f.label :我的頭像 %>
    <%= f.file_field :image, id: :user_image, class: "form-control" %>
  </div>

  <div class="field">
     <%= f.label :姓名 %><br />
     <%= f.text_field :name%>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
     <%= f.label :手機號碼 %><br />
     <%= f.telephone_field :phone, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "更新資料" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
