<div class='flex flex-grow items-center flex-col space-y-4 pb-10 pt-28'>
  <%# 商品顯示 %>
  <div class='bg-gray-50 w-11/12 rounded-sm overflow-hidden border-1 shadow  overflow-y-auto ',style='height:500px'>
      <table class='w-full text-center border-collapse'>
      <thead class='bg-gray-100 text-gray-500'>
        <tr>
            <td class='p-2'>商品圖片</td>
            <td>商品名稱</td>
            <td>商品描述</td>
            <td>商品數量</td>
            <td>商品價格</td>
            <td>上架時間</td>
            <td>下架時間</td>
            <td>上架狀態</td>
            <td colspan='2'>商品設定</td>
        <tr>
      </thead>

      <tbody>
        <% @products.each do |product|%>
          <tr class='border-b-2 border-fuchsia-600 h-24'>
              <td class='flex justify-center items-center w-full h-24'>
                <% if product.image_url.present? %>
                  <div class='w-20 h-20'><%= image_tag product.image_url, style:'width:100%;height:100%;object-fit:cover' %></div>
                <% end %>
              </td>
              <td class='w-1/12'><%= product.name %></td>
              <td class='w-2/12'><%= product.content %></td>
              <td class='w-1/12'><%= product.quantity %></td>
              <td class='w-1/12'><%= product.price %></td>
              <td class='w-2/12'><%= product.schedule_start ? product.schedule_start.strftime("%Y-%m-%d %H:%M") : ""%></td>
              <td class='w-2/12'><%= product.schedule_end ? product.schedule_end.strftime("%Y-%m-%d %H:%M") : "" %></td>
              <td class='w-1/12'> <%= product.status==0 ? "上架" : "下架"%></td>
              <td class='w-1/12'><%= link_to "編輯", edit_product_path(product), class:'text-white text-sm p-2 rounded bg-gray-500 hover:bg-gray-900' %>
              </td>
              <td class='w-1/14'><%= link_to "刪除", product_path(product), method: "delete", data: {confirm: "確定刪除嗎？"}, class:'text-red-500 text-sm p-2 rounded bg-white border border-red-500 hover:text-white hover:bg-red-500' %></td>
          </tr>
        <% end %>
      </tbody>
      </table>
  </div>
</div>