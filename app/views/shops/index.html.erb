<h1>賣家中心</h1>

<h3>商品列表</h3>
<%= link_to '新增商品', new_shop_product_path(current_user.shop) %>

<table>
  <thead>
    <tr>
        <td><%= "商品名稱" %></td>
        <td><%= "商品描述" %></td>
        <td><%= "商品數量" %></td>
        <td><%= "商品價格" %></td>
        <td><%= "商品設定" %></td>
    <tr>
  </thead>

  <tbody>
      <% @products.each do |product|%>
    <tr>
        <td><%= product.name %></td>
        <td><%= product.content %></td>
        <td><%= product.quantity %></td>
        <td><%= product.price %></td>
        <td><%= link_to "編輯商品", edit_shop_product_path(product.shop, product) %></td>
        <td><%= link_to "刪除商品", shop_product_path(product.shop, product), method: "delete", data: {confirm: "確定刪除嗎？"}  %></td>
    <tr>
      <% end %>
  </tbody>
</table>